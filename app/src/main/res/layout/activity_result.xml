<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ResultActivity">

    <LinearLayout
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

        <LinearLayout
                android:background="#00695C"
                android:id="@+id/llChatTitle"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:weightSum="1">

            <TextView
                    app:autoSizeTextType="uniform"
                    android:id="@+id/chatTv"
                    android:text="Whatsapp Chat"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"
                    android:layout_weight="0.90"
                    android:layout_margin="8dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:id="@+id/chatTitleDropDown"
                    android:src="@mipmap/ic_expand"/>
        </LinearLayout>



        <com.github.aakira.expandablelayout.ExpandableWeightLayout
                android:id="@+id/expandableLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.65"
                android:background="#00695C"
                app:ael_duration="750"
                app:ael_interpolator="anticipateOvershoot"
                app:ael_expanded="false">

            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.github.mikephil.charting.charts.BarChart
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:id="@+id/chart"
                            android:layout_width="match_parent"
                            android:background="@android:color/white"
                            android:padding="8dp"
                            android:layout_height="400dp" />

                    <TextView
                            android:text="Total Message Count: 12345"
                            android:id="@+id/tv_chat_msgcount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/chart"
                            android:background="@android:color/white"
                            android:padding="8dp"
                            android:layout_marginBottom="12dp"
                            android:textSize="16sp"/>

                    <TextView
                            android:text="Message Sending Frequency: 12 Msg/Day"
                            android:id="@+id/tv_chat_msgfreq"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:layout_below="@id/tv_chat_msgcount"
                            android:padding="8dp"
                            android:layout_marginBottom="12dp"
                            android:textSize="16sp"/>

                    <ImageView
                            android:id="@+id/chatWdImg"
                            android:adjustViewBounds="true"
                            android:background="@android:color/white"
                            android:padding="4dp"
                            android:layout_below="@id/tv_chat_msgfreq"
                            android:layout_marginBottom="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                            android:layout_below="@id/chatWdImg"
                            android:id="@+id/horizontalBarChart"
                            android:layout_marginBottom="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"/>

                    <com.github.mikephil.charting.charts.PieChart
                            android:layout_below="@id/horizontalBarChart"
                            android:id="@+id/piechart"
                            android:padding="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"/>

                </LinearLayout>

            </ScrollView>

        </com.github.aakira.expandablelayout.ExpandableWeightLayout>

        <android.support.v7.widget.RecyclerView
                android:layout_weight="0.85"
                android:id="@+id/chat_userlist_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

    </LinearLayout>

    <FrameLayout
            android:id="@+id/toolbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimaryDark" />

        <com.miguelcatalan.materialsearchview.MaterialSearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </FrameLayout>


</RelativeLayout>
